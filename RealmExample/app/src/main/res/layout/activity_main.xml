<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/dimen_16dp"
    tools:context="com.falin.valentin.realmexample.MainActivity">

    <LinearLayout
        android:id="@+id/arrows_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/myrect2"
        android:elevation="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_previous_button"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/main_forward_button"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_forward_black_24dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrows_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/myrect2"
        android:elevation="4dp" />

</RelativeLayout>
